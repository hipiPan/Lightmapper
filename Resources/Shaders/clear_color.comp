#version 450 core

layout (local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

layout(binding = 2000, rgba32f) uniform image2D dest_texture;

layout(push_constant) uniform ClearParams {
    vec4 clear_color;
} params;

void main() {
    imageStore(dest_texture, ivec2(gl_GlobalInvocationID.xy), params.clear_color);
}
